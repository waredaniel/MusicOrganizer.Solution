@{
  Layout = "_Layout";
}




@using MusicOrganizer.Models;

<h1>Artists</h1>
@if (Model.Count == 0)
{
  <p>No artist added yet</p>
}
<ul>
@foreach (Artist artist in Model)
{
  <li><a href='/artist/@artist.Id'>@artist.ArtistName</a></li>
} 
</ul>


